<%= simple_form_for(@book, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :description, as: :text, input_html: { rows:"3" } %>
    <%= f.input :link %>
    <%= f.input :score %>
    <%= f.input :featured %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
